            <ToggleSwitch Name="fsrPressed2" Header="fsrPressed2"/>
            <ToggleSwitch Name="fsrPressed3" Header="fsrPressed3"/>
            <TextBox Name="fsrForces0" Text="5"/>
            <TextBox Name="fsrForces1" Text="23"/>
            <TextBox Name="fsrForces2" Text="78"/>
